#!/usr/bin/env python

import bs4
import pynliner
import subprocess
import argparse


if __name__ == "__main__":
    parser = argparse.ArgumentParser(
        description="Compile LaTeX document to html with all css in one file."
    )
    parser.add_argument("fname", nargs=1, type=str, help="File name (str).")

    args = parser.parse_args()

    texname = args.name[0]
    namesplit = texname.split(os.extsep)
    assert namesplit[1] == 'tex', "Input must be a .tex file"
    basename = namesplit[0]

    _ = subprocess.run(
        ["make4ht", texname],
        cwd=".",
        check=True,
        capture_output=True,
    )


    with open(f"{basename}{os.extsep}html", "r") as f:
        soup = bs4.BeautifulSoup(f.read())

    stylesheets = soup.findAll("link", {"rel": "stylesheet"})

    for s in stylesheets:

        t = soup.new_tag("style")
        with open(s["href"]) as f:
            csstxt = f.read()

        csstxtsan = []
        for l in csstxt.split("\n"):
            if "~" not in l:
                csstxtsan.append(l)

        c = bs4.element.NavigableString("\n".join(csstxtsan))
        t.insert(0, c)
        t["type"] = "text/css"
        s.replaceWith(t)


    html0 = str(soup)
    out = pynliner.fromString(html0)

    with open("pubs_for_wordpress.html", "w") as f:
        f.write(out)
